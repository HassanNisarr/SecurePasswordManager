@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
    <head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body, h1, h2, h3, h4, h5, h6, .navbar, .jumbotron, p, a {
            font-family: 'Roboto', sans-serif;
        }

        .jumbotron {
            background-color: #f8f9fa; /* A light grey background for the jumbotron */
            color: #333; /* Dark text for contrast */
        }

            .jumbotron a.btn-primary {
                background-color: #007bff; /* Bootstrap primary blue */
                color: white;
            }

            .jumbotron a.btn-secondary {
                background-color: #6c757d; /* Bootstrap secondary color */
                color: white;
            }

        .feature-icon {
            color: #007bff; /* Bootstrap primary blue */
        }

        .feature-heading {
            color: #333; /* Dark grey color for headings */
        }

        /* Additional color adjustments can be added here */
    </style>
    </head>
    <body>
    <div class="jumbotron text-center bg-light">
        <h1 class="display-4"><i class="fas fa-key"></i> Welcome to Cipher Vault!</h1>
        <p class="lead">This is a simple, secure, and stylish password manager.</p>
        <hr class="my-4">
        <p>Keep your passwords safe and accessible anywhere.</p>
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="@Url.Action("Register", "Account")" role="button"><i class="fas fa-user-plus"></i> Sign Up Now</a>
            <a class="btn btn-secondary btn-lg" href="@Url.Action("Login", "Account")" role="button"><i class="fas fa-sign-in-alt"></i> Login</a>
        </p>
    </div>


    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <i class="fas fa-lock fa-3x"></i>
                <h2 class="mt-3">Secure</h2>
                <p>Your passwords are encrypted and stored securely.</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="fas fa-user-friends fa-3x"></i>
                <h2 class="mt-3">Easy to Use</h2>
                <p>Access and manage your passwords effortlessly.</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="fas fa-globe-americas fa-3x"></i>
                <h2 class="mt-3">Accessible Anywhere</h2>
                <p>Retrieve your passwords from any device, any time.</p>
            </div>
        </div>
    </div>


    </body>

</html>

