<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Cipher Vault</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">

    <style>
        body, h1, h2, h3, h4, h5, h6, .navbar, .jumbotron, p, a, input, .btn {
            font-family: 'Poppins', sans-serif;
        }

        .login-container {
            margin-top: 5%;
            padding: 5%;
        }

        .login-form-1 {
            padding: 5%;
            background: #28246F;
            box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.3);
            border-radius: 10px;
            color: #FFF;
        }

            .login-form-1 h3 {
                text-align: center;
                color: #fff;
                font-weight: 600;
            }

            .login-form-1 .form-control {
                padding: 10px;
                margin-bottom: 15px;
                border-radius: 5px;
                background: #fff;
                border: none;
                font-weight: 400;
            }

            .login-form-1 .btnSubmit {
                border-radius: 5px;
                padding: 15px 30px;
                border: none;
                background-color: #FF8C00;
                color: #fff;
                font-size: 18px;
                font-weight: 600;
                width: 100%;
                cursor: pointer;
            }

            .login-form-1 .btnForgetPwd {
                border-radius: 5px;
                background-color: #f6f6f6;
                margin-top: 15px;
                color: #0D0D0D;
                text-align: center;
                display: block;
                padding: 10px;
                text-decoration: none;
                font-weight: 600;
            }

                .login-form-1 .btnForgetPwd:hover {
                    background-color: #E8E8E8;
                }

        .navbar-brand {
            display: flex;
            align-items: center;
            font-weight: 600;
            font-size: 24px;
            color: #fff;
        }

            .navbar-brand i {
                margin-right: 10px;
            }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <i class="far fa-lock"></i> <!-- Assuming you want to use the "far" style for a regular lock icon -->
                Cipher Vault
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                    aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <!-- Add your navigation links here if needed -->
                </ul>
            </div>
        </div>
    </nav>


    <div class="container">
        @RenderBody()
    </div>

    @* <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script> *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
