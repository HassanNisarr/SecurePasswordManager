@model SecurePasswordManager.Models.AddPasswordRecordViewModel
@{
    ViewBag.Title = "Add Record";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container login-container">
    <div class="row">
        <div class="col-md-6 offset-md-3 login-form-1">
            <h3>Add Record</h3>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.PlatformName, new { @class = "form-control", placeholder = "Plateform Link or Name" })
                    </div>
                    @Html.ValidationMessageFor(m => m.PlatformName)
                </div>

                <div class="form-group">
                    <div class="input-group">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="form-group">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.AdditionalInfo, new { @class = "form-control", placeholder = "Additional Info" })
                    </div>
                    @Html.ValidationMessageFor(m => m.AdditionalInfo)
                </div>

                <div class="form-group">
                    <input type="submit" class="btnSubmit" value="Add" />
                </div>


            }
        </div>
    </div>
</div>
